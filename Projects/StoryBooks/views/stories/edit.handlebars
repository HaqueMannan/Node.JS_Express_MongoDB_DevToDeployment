<h1>Edit Story</h1>
<div class="row">
   <form class="col s12" action="/stories/{{story._id}}?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="row">
         <div class="input-field">
            <input type="text" name="title" value="{{story.title}}">
            <label for="title">Title</label>
         </div>
      </div>
      <div class="row">
         <div class="input-field">
            <select name="status">
               {{#select story.status}}
                  <option value="public" selected>Public</option>
                  <option value="private">Private</option>
                  <option value="unpublished">Unpublished</option>
               {{/select}}
            </select>
            <label for="status">Status</label>
         </div>
      </div>
      <div class="row">
         <p>
            <label>
               <input id="filled-in-box" class="filled-in" type="checkbox" name="allowComments" {{#if story.allowComments}}checked="checked"{{/if}} />
               <span>Allow Comments</span>
            </label>
         </p>
      </div>
      <div class="row">
         <div class="input-field">
            <h5>Tell Us Your Story:</h5>
            <textarea name="body">{{story.body}}</textarea>
         </div>
      </div>
      <input class="btn" type="submit" value="Save">
   </form>
</div>